/* * Author: eye8 */package org.flowplayer.controls.controllers {    	import flash.external.ExternalInterface;		import org.flowplayer.controls.SkinClasses;	import org.flowplayer.ui.buttons.ButtonEvent;	import org.flowplayer.ui.controllers.AbstractButtonController;		public class ShareButtonController extends AbstractButtonController {				public function ShareButtonController() {			super();		}				override public function get name():String {			return "share";		}				override public function get defaults():Object {			return {				tooltipEnabled: false,				tooltipLabel: "Share",				visible: true,				enabled: true			};		}				override protected function get faceClass():Class {			return SkinClasses.getClass("fp.ShareButton");		}				override protected function onButtonClicked(event:ButtonEvent):void {									//log.info("Share button clicked");			try { // try to call user-defined external javascript function								// To activate external js functions defined for the controls plugin, first add a public function in 				// Controls.as to dispatch the corresponding plugin event to javascript, then call this function in				// Controls.as. See http://flowplayer.org/forum/5/17318				var controlsObj:Object = _player.pluginRegistry.getPlugin("controls").getDisplayObject() as Object;				controlsObj.onShare();							} catch(err:Error) {				log.error("share error",err);			}		}	}}